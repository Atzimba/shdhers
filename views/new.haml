  %fieldset
    %h2 Basic information
    #username
      %label{:for => 'username'} Username
      %input.text{:type => 'text', :name => 'username'}
    #first_name
      %label{:for => 'first_name'} First name
      %input.text{:type => 'text', :name => 'first_name'}
    #last_name
      %label{:for => 'last_name'} Last name
      %input.text{:type => 'text', :name => 'last_name'}
    #email
      %label{:for => 'email'} Email
      %input.text{:type => 'text', :name => 'email'}
  %fieldset
    %h2 Profiles
    #twitter
      %label{:for => 'twitter'} Twitter
      %input.text{:type => 'text', :name => 'twitter'}
    #github
      %label{:for => 'github'} Github
      %input.text{:type => 'text', :name => 'github'}
  %fieldset
    %h2 Background
    #interests
      %label{:for => 'interests'} Interests
      %input.text{:type => 'text', :name => 'interests'}
    #experience
      %label{:for => 'experience'} Experience
      %input.text{:type => 'text', :name => 'experience'}
